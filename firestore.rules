rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }

    // Daily check-ins
    match /daily_checkins/{dateKey}/users/{userId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }

    // Admin config
    match /admin/{docId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
